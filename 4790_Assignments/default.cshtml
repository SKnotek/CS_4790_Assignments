@{
	Layout = "~/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
	<title>Assignment One</title>
</head>
<body>
	<div class="container">
		<p class="col-md-9 CenterAndBig">Welcome to Stephen Knotek's second assignment</p>
	</div>
	<div class="container">
		<br>
		<div class="col-md-2"></div>
		<div class="col-md-5">
			<div id="Carousel" class="carousel slide">

				<ol class="carousel-indicators">
					<li data-target="#Carousel" data-slide-to="0" class="active"></li>
					<li data-target="#Carousel" data-slide-to="1"></li>
					<li data-target="#Carousel" data-slide-to="2"></li>
					<li data-target="#Carousel" data-slide-to="3"></li>
				</ol>

				<div class="carousel-inner" role="listbox">
					<div class="item">
						<img src="~/img/xkcdOne.png" alt="xkcd" width="460" height="345">
					</div>

					<div class="item">
						<img src="~/img/xkcdTwo.png" alt="xkcd2" width="460" height="345">
					</div>

					<div class="item active">
						<img src="~/img/xkcdThree.jpg" alt="xkcd3" width="460" height="345">
					</div>

					<div class="item">
						<img src="~/img/xkcdFour.jpg" alt="xkcd4" width="460" height="345">
					</div>

				</div>

				<a class="carousel-control left" href="#Carousel" data-slide="prev">&lsaquo;</a>
				<a class="carousel-control right" href="#Carousel" data-slide="next">&rsaquo;</a>

			</div>
		</div>
		<div class="col-md-2"></div>
	</div>
	
	<script>
		$(function () {
			$('.carousel').carousel({
				interval: 5000
			});
		});
	</script>
</body>
</html>